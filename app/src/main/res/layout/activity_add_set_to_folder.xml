<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddSetToFolderActivity">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imv_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_baseline_arrow_back_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="20dp"
            android:text="Add sets" />


        <Button
            android:id="@+id/btn_addnewset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="80dp"
            android:text="Create Set" />

        <ImageView
            android:id="@+id/img_checkFinish"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/fui_ic_check_circle_black_128dp" />
        <Button
            android:id="@+id/btn_created"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Created"
            android:layout_marginTop="50dp"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"/>

            <Button
                android:id="@+id/btn_searched"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="SEARCHED"
                android:layout_marginRight="10dp"
                android:layout_marginTop="50dp"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:layout_alignParentEnd="true"/>

    </RelativeLayout>
    <FrameLayout
        android:id="@+id/create_folder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rl_header"
        app:layout_constraintVertical_bias="0.1">

    </FrameLayout>





</androidx.constraintlayout.widget.ConstraintLayout>